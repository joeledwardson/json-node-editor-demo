    "version": "0.2.0",
    "configurations": [
        {
            "name": "run demo",
            "request": "launch",
            "runtimeArgs": [
                "run", "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "chrome",
            "webRoot": "${workspaceFolder}/src",
            "url": "http://localhost:3000",
        }
    ]
}